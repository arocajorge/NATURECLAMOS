@model info.general.tbl_parametros_correo_Info

@{
    ViewBag.Title = "Index";
}

@if (ViewBag.mensaje != null)
{
    <h2>@ViewBag.mensaje</h2>
}

@using (Html.BeginForm("Index", "ParametroCorreo", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id);    
        @Html.DevExpress().FormLayout(settings =>
   {
       settings.Name = "FormLoayout1";
       settings.Width = Unit.Percentage(100);

       settings.Items.AddGroupItem(g =>
       {
           g.SettingsItemCaptions.Location = LayoutItemCaptionLocation.Top;
           g.Caption = "Datos correo";
           g.Items.Add(m => m.correo_cuenta, i =>
           {
               i.NestedExtension().TextBox(t => t.Width = Unit.Percentage(100));
           });
           g.Items.Add(m => m.correo_contrasenia, i =>
           {
               i.NestedExtension().TextBox(t => t.Width = Unit.Percentage(100));
           });
           g.Items.Add(m => m.correo_cuenta_destinatario, i =>
           {
               i.NestedExtension().Memo(t => t.Width = Unit.Percentage(100));
               i.RowSpan = 3;
               i.HelpText = "Separe los correos por el signo punto y coma (;)";
               i.HelpTextSettings.Position = HelpTextPosition.Bottom;
           });           
           g.Items.Add(m => m.correo_asunto, i =>
           {
               i.NestedExtension().TextBox(t => t.Width = Unit.Percentage(100));
           });
           g.Items.Add(m => m.host, i =>
           {
               i.NestedExtension().TextBox(t => t.Width = Unit.Percentage(100));
           });
           g.Items.Add(m => m.puerto, i =>
           {
               i.NestedExtension().SpinEdit(t => t.Width = Unit.Pixel(200));
           });
           g.Items.Add(m => m.permitir_ssl, i =>
           {
               i.NestedExtension().CheckBox(t => t.Width = Unit.Percentage(100));
           });
           g.Items.Add(m => m.enviar_correo_al_guardar_queja, i =>
           {
               i.NestedExtension().CheckBox(t => t.Width = Unit.Percentage(100));
           });
           g.Items.Add(m => m.ftp_usuario, i =>
           {
               i.NestedExtension().TextBox(t => t.Width = Unit.Percentage(100));
           });
           g.Items.Add(m => m.ftp_contrasenia, i =>
           {
               i.NestedExtension().TextBox(t => t.Width = Unit.Percentage(100));
           });
           g.Items.Add(m => m.ftp_url, i =>
           {
               i.NestedExtension().TextBox(t => t.Width = Unit.Percentage(100));
           });

           g.Items.Add(i =>
           {
               i.Caption = ""; i.Paddings.PaddingTop = 24;
               i.SetNestedContent(() =>
               {
                   Html.DevExpress().Button(b =>
                   {
                       b.Name = "UpdateBtn";
                       b.Text = "Guardar";
                       b.ControlStyle.CssClass = "editFormButton";
                       b.UseSubmitBehavior = true;
                   }).Render();
               });
           });
       });
   }).GetHtml()
    
}

